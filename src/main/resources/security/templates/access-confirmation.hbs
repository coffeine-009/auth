{{#> page }}
    <div class="container">
      <div class="layer">
        <form action="/oauth/authorize" method="post">
            <fieldset>
                <legend>{{i18n 'access.confirmation' this bundle = "i18n/messages"}}</legend>

                {{! Error container }}
                <div class="alert alert-warning">
                    {{i18n "access.confirmation.client.title" authorizationRequest.clientId bundle = "i18n/messages"}}
                </div>

                {{#each scopes}}
                  <div class="form-check">
                    <label class="form-check-label">
                      <input
                          type="checkbox"
                          class="form-check-input"
                          type="checkbox"
                          name="{{@key}}"
                          value="true"
                      />
                      {{@key}}
                    </label>
                  </div>
                {{/each}}

                <input name='user_oauth_approval' value='true' type='hidden'/>
                <input type="hidden" name="{{_csrf.ParameterName}}" value="{{_csrf.token}}"/>

                <button type="submit" class="btn btn-primary">
                    {{i18n 'approve' bundle = "i18n/messages"}}
                </button>
            </fieldset>
        </form>
      </div>
    </div>
{{/page}}
